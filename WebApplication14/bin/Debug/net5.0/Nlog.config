<?xml version="1.0" encoding="utf-8"?>
	<nlog  
	  xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
	  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	  autoReload="true"
	  throwExceptions ="false"
	  >
		<variable name="LogDirectory"  value ="${gdc:LogDirectory}"></variable>

		<targets>
			<target name = "logfile" xsi:type="File" fileName ="${LogDirectory}/${shortdate}.log" layout="${longdate} ${uppercase:${level}} ${message}"/>
			<target name ="logconsole" xsi:type =" ColoredConsole" layout ="${londate} ${uppercase:${level}} ${message}" />			
		</targets>
		<rules>
			<logger name="*" minLevel ="Trace" writeTo ="logconsole"/>
			<logger name="*" minLevel ="Trace" writeTo ="logfile"/>
		</rules>
</nlog>